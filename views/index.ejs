<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>PESTICIDES SUPPLY SYSTEM</title>
  <link rel="stylesheet" href="css/style.css">
</head>
<body class="page-body">
  <div class="main-bg">

    <!-- Header -->
    <header class="main-header">
      <div class="header-inner header-inner-centered">
        <h1 class="company-logo">
          <a href="/home" class="company-logo-link">PESTICIDES SUPPLY SYSTEM</a>
        </h1>
        <nav class="main-navigation nav-centered">
          <ul class="nav-list">
            <li class="nav-item active">
              <a href="/" class="nav-link">User Login</a>
            </li>
            <li class="nav-item">
              <a href="/adminlogin" class="nav-link">Admin Login</a>
            </li>
            <li class="nav-item">
              <a href="/createaccount" class="nav-link">Create Account</a>
            </li>
          </ul>
        </nav>
      </div>
    </header>

    <h1 class="main-title">PESTICIDE SUPPLY SYSTEM</h1>
    <h2 class="welcome-text">WELCOME</h2>

    <form action="/login" method="POST" class="login-form">
      <div class="email-section">
        <label for="email" class="email-label">Email:</label>
        <input type="email" id="email" name="email" required class="email-input">
      </div>

      <div class="password-section">
        <label for="password" class="password-label">Password:</label>
        <input type="password" name="password" id="myInput" required class="password-input">
        
            <div class="password-toggle-row">
              <input type="checkbox" id="togglePassword" class="password-toggle-checkbox" onclick="togglePasswordVisibility()">
              <label for="togglePassword" class="password-toggle-label">Show Password</label>
            </div>
      </div>

      <button type="submit" class="login-button">LOGIN</button>
    </form>

    <script>
      function togglePasswordVisibility() {
        var x = document.getElementById("myInput");
        x.type = (x.type === "password") ? "text" : "password";
      }
    </script>
  </div>
</body>
</html>
