<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>PESTICIDES SUPPLY SYSTEM | Reviews</title>
  <link rel="stylesheet" href="css/style.css">
</head>
<body>
  <div class="main-bg">
    <!-- Header -->
    <header class="main-header">
      <div class="header-inner header-inner-centered">
        <h1 class="company-logo">
          <a href="/home" class="company-logo-link">PESTICIDES SUPPLY SYSTEM</a>
        </h1>
        <nav class="main-navigation nav-centered">
          <ul class="nav-list">
            <li class="nav-item"><a href="/home" class="nav-link">Home</a></li>
            <li class="nav-item"><a href="/products" class="nav-link">Products</a></li>
            <li class="nav-item"><a href="/cart" class="nav-link">Cart</a></li>
            <li class="nav-item"><a href="/invoices" class="nav-link">Invoices</a></li>
            <li class="nav-item"><a href="/pricing" class="nav-link">Pricing</a></li>
            <li class="nav-item"><a href="/contacts" class="nav-link">Contacts</a></li>
            <li class="nav-item active"><a href="/reviews" class="nav-link">Reviews</a></li>
            <li class="nav-item"><a href="/" class="nav-link">Log Out</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <!-- Content -->
    <section id="content">
      <div class="container_24">
        <div class="wrapper">
          <div class="grid_24 content-bg">
            <article class="grid_16 suffix_1 prefix_1 alpha">
              <main class="reviews-section">
                <h2 class="reviews-title">User Reviews</h2>
                <% if (reviews && reviews.length > 0) { %>
                  <ul class="reviews-list">
                    <% reviews.forEach(function(review) { %>
                      <li class="review-item">
                        <strong class="reviewer-name"><%= review.name %>:</strong>
                        <p class="review-message"><%= review.message %></p>
                      </li>
                    <% }); %>
                  </ul>
                <% } else { %>
                  <p class="no-reviews">No reviews available</p>
                <% } %>
              </main>
            </article>
          </div>
        </div>
      </div>
    </section>
  </div>
</body>
</html>
