<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link rel="stylesheet" href="/css/cart.css">
    <script src="/js/cart.js" defer></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (!sessionStorage.getItem('cartSynced')) {
                const cart = localStorage.getItem('cart');
                if (cart) {
                    fetch('/cart/sync', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ cart: JSON.parse(cart) })
                    }).then(() => {
                        sessionStorage.setItem('cartSynced', '1');
                        location.reload();
                    });
                }
            }
        });
    </script>
</head>
<body>
    <div class="main-bg">
        <header>
            <h1>Shopping Cart</h1>
            <nav>
                <ul>
                    <li><a href="/home">Home</a></li>
                    <li><a href="/products">Products</a></li>
                    <li><a href="/checkout">Checkout</a></li>
                </ul>
            </nav>
        </header>
        <section id="cart">
            <h2>Your Cart</h2>
            <div id="cart-items">
                <% if (cart && cart.length > 0) { %>
                    <% cart.forEach(function(item) { %>
                        <div class="cart-item">
                            <div class="item-details">
                                <h3><%= item.productName %></h3>
                                <p>Price: $<%= item.price %></p>
                                <p>Quantity: <input type="number" value="<%= item.quantity %>" min="1" onchange="updateQuantity('<%= item.id %>', this.value)"></p>
                            </div>
                            <button onclick="removeFromCart('<%= item.id %>')">Remove</button>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>Your cart is empty.</p>
                <% } %>
            </div>
            <div id="cart-total">
                <h3>Total: $<span id="total-price"><%= totalPrice %></span></h3>
            </div>
            <button type="button" id="checkout-button" onclick="proceedToCheckout()">Proceed to Checkout</button>
        </section>
    </div>
    <script>
        function proceedToCheckout() {
            window.location.href = '/checkout';
        }
    </script>
</body>
</html>