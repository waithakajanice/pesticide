<!DOCTYPE html>
<html lang="en">
<head>
  <title>User Management | Admin</title>
  <meta charset="utf-8">
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <div class="main-bg">
    <header class="main-header">
      <div class="header-inner header-inner-centered">
        <h1 class="company-logo">PESTICIDES SUPPLY SYSTEM</h1>
        <nav class="main-navigation nav-centered">
          <ul class="nav-list">
            <li class="nav-item"><a href="/adminview" class="nav-link">View Product</a></li>
            <li class="nav-item"><a href="/addproduct" class="nav-link">Add Product</a></li>
            <li class="nav-item active"><a href="/admin/viewuser" class="nav-link">User Management</a></li>
            <li class="nav-item"><a href="/" class="nav-link">Log Out</a></li>
          </ul>
        </nav>
      </div>
    </header>
    <main class="products-section">
      <h2 class="products-title">All Users</h2>
      <div class="table-responsive">
        <table class="admin-products-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Created At</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.fname %></td>
                <td><%= user.lname %></td>
                <td><%= user.email %></td>
                <td><%= user.created_at.toLocaleString ? user.created_at.toLocaleString() : user.created_at %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <h2 class="products-title" style="margin-top:32px;">All Admins</h2>
      <div class="table-responsive">
        <table class="admin-products-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Created At</th>
            </tr>
          </thead>
          <tbody>
            <% admins.forEach(admin => { %>
              <tr>
                <td><%= admin.id %></td>
                <td><%= admin.name %></td>
                <td><%= admin.created_at.toLocaleString ? admin.created_at.toLocaleString() : admin.created_at %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</body>
</html>